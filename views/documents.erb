<section class="container">
  <div id="col-1">
    <% unless @documents.empty? %>
      <form method="post" action="documents/delete">
        <% @documents.each_with_index do |document, idx| %>
          <p><a href="documents/<%= idx %>"><%= document %></a>
          <input name="<%= document %>" type="checkbox"></p>
        <% end %>
        <br><br>
        <button type="submit">Delete Selected</button>
        <br><br>
      </form>
    <% else %>
      <p class="center"><%= "#{format_input(@directory_name)} Has No Saved Documents" %></p>
    <% end %>
  </div>
  
  <div id="col-1">  
    <form method="post" action="documents/add" enctype="multipart/form-data">
      <br>
      <label for="file">Add a pdf or txt file to <%=@title %></label>
      <br><br>
      <input type="file" name="file" accept=".pdf, .txt">
      <br><br>
      <input name="filename" size="30" placeholder="Save file as..." >
      <button type="submit">Save File</button>
      <br><br>
    </form>
  </div>
</section>